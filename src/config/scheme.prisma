generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("EVENTARRY_DATABASE_URL")
}

model User {
  userId     String    @id @db.VarChar(8)
  fullName   String    @db.VarChar(50)
  shortName  String    @db.VarChar(50)
  password   String    @db.VarChar(255)
  branchCode String    @db.VarChar(8)
  levelId    String    @db.VarChar(3)
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
}

model InvitationCode {
  code        String    @id @db.VarChar(36)
  userId      String    @db.VarChar(8)
  name        String?   @db.VarChar(255)
  level       String?   @db.VarChar(255)
  phoneNumber String?   @db.VarChar(255)
  status      String?   @db.VarChar(255)
  pax         String?   @db.VarChar(255)
  createdAt   DateTime? @default(now())
}

model SessionAuth {
  token     String    @db.VarChar(100)
  sessionId String    @id @db.VarChar(36)
  userId    String    @db.VarChar(100)
  createdAt DateTime? @default(now())
  expiredAt DateTime?
}

model Comments {
  id        Int      @id @default(autoincrement()) // Primary key, auto-incrementing integer
  userId    String   @db.VarChar(8) // User ID with a maximum length of 8 characters
  eventId   String   @db.VarChar(36) // Event ID with a maximum length of 36 characters
  comment   String   @db.VarChar(255) // Comment with a maximum length of 255 characters
  createdAt DateTime? @default(now()) // Created at timestamp, optional
}
